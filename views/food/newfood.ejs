<%- include ('../partials/header')%>
<div id="allingment">
<div class="container">
    <div class="row">
        <div style="width:30%; margin:0 auto;">
        <h2>Add new campground</h2>
    <form action="/foods" method="post">
         <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="food name">
        </div>
        <div class="form-group">
        <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
        </div>
         <div class="form-group">
      <select id="inputState" class="form-control" name="type">
        <option selected>Select type</option>
        <option>Non veg</option>
        <option>veg</option>
      </select>
    </div>
         <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="image url">
        </div>
         <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="description">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">submit</button>
        </div>
           
        <p><a href="/foods">Go Back</a></p>
    </form> 
    </div>
    </div>
    
   
</div>
</div>


