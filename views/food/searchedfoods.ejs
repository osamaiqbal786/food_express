<%- include ('../partials/header')%>

<header class="jumbotron" style="background-image:url(https://previews.123rf.com/images/vicushka/vicushka1602/vicushka160200117/52237375-asian-food-background-with-various-of-cooking-ingredients-on-rustic-background-top-view-banner-asian.jpg); background-size:100%;">
      <div class="container">
          <h1 class="text-center text-warning">Welcome To Food Express!</h1>
    <p><h4 class="text-center">View Our Top Picked food</h4></p>
        <p>
             <% if(noMatch !== null) { %>
             <h3 class="text-center text-danger"><%= noMatch %></h3>
             <% } %>
       </p>
      </div>
    
</header>
    <div class="container">

<div class="row" style="display:flex; flex-wrap: wrap; padding:10px 0">
   <% food.forEach(function(food){ %>
    <div class="col-md-3 col-sm-6">
        <div class="img-thumbnail">
            <img  src="<%=food.image%>"class="img-fluid" alt="Responsive image">
            <div class="caption">
            <h6><a href="/foods/<%= food._id %>" class="text-muted"><%=food.name%></a></h6>
            </div>
        </div>
        
        
    </div>
<% }); %> 
</div>
</div>



<%- include ('../partials/footer')%>